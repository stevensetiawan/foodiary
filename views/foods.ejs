<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Diary</title>
    <style>
        <%- include('partials/style') %>
        table{
            margin: 10px auto;
        }
        th, td{
            padding: 10px 10px;
        }
        a{
            text-decoration: none;
        }
        h1{
            margin-top: 60px;
        }
    </style>
</head>
<body>
    <%- include('partials/header', { user, page: 'foods' })%>
    <h1>Foods</h1>
    <% if(user) {%>
        <% if(user.role === 'admin') {%>
            <a href="/foods/add">Add Food</a>
        <%}%>
    <%}%>
    <table border ="1">
        <tr>
            <th>Food</th>
            <th>Calories</th>
            <% if(user) {%>
                <% if(user.role === 'admin') {%>
                    <th>Action</th>
                <%}%>
            <%}%>
        </tr>
        <% for(let i = 0; i < data.length; i++) { %>
            <tr>
                <td><a href="/foods/<%=data[i].id%>/restaurants"><%= data[i].name%></a></td>
                <td><%= data[i].calories%></td>
                <% if(user) {%>
                    <% if(user.role === 'admin') {%>
                        <td><button><a href="/foods/edit/<%= data[i].id %>">Edit</a></button> <button><a href="/foods/delete/<%= data[i].id %>">delete</a></button></td>
                     <%}%>
                <%}%>
            </tr>
        <% } %>
    </table>
    <%- include('partials/script') %>
</body>
</html>
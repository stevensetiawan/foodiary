    <%- include('partials/header', { user })%>
    <h1>Foods</h1>
    <% if(user) {%>
        <% if(user.role === 'admin') {%>
            <a href="/foods/add">Add Food</a>
        <%}%>
    <%}%>
    <table border ="1">
        <tr>
            <th>Food</th>
            <th>Calories</th>
            <% if(user) {%>
                <% if(user.role === 'admin') {%>
                    <th>Action</th>
                <%}%>
            <%}%>
        </tr>
        <% for(let i = 0; i < data.length; i++) { %>
            <tr>
                <td><a href="/foods/<%=data[i].id%>/restaurants"><%= data[i].name%></a></td>
                <td><%= data[i].calories%></td>
                <% if(user) {%>
                    <% if(user.role === 'admin') {%>
                        <td><button><a href="/foods/edit/<%= data[i].id %>">Edit</a></button> <button><a href="/foods/delete/<%= data[i].id %>">delete</a></button></td>
                     <%}%>
